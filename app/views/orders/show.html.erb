<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary-jumbotron">
    <h4>Thank you for your order, <%= @order.email %>!</h4>
     <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>    
  </div>

    <div class="panel panel-default items">
      <h4>Order Summary:</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="2">Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>        
          <tbody>
          <% @order.line_items.each do |item| %>        
            <tr>
              <td>
                <%= image_tag item.product.image.tiny.url %>
              </td>
              <td>
                <h4><%= item.product.name %></h4>
                <br>
                <p><%= item.product.description %></p>
              </td>
              <td class="cart-price">
                <%= humanized_money_with_symbol item.item_price %>
              </td>
              <td>
                <div>
                <%= item.quantity %>
                </div>
              </td>
              <td class="cart-price">
                <%= humanized_money_with_symbol item.item_price * item.quantity %>
              </td>
            </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4">
                TOTAL:
              </th>
              <th id="total-price">
                <%= humanized_money_with_symbol @order.total_cents / 100.00 %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>

</section>
